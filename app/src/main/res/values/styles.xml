<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorDarkBlue</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Switch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">#75C2E9</item>
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#287ED5</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="CalendarWidgetHeader">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CalendarWidgetWeek">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CalendarWidgetDate">
        <item name="android:textSize">15sp</item>
    </style>

</resources>
